<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mbds.livreenfolie.activity.LivreDetailsActivity"
    tools:showIn="@layout/activity_article_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Title"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:text="Categorie"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/puzzle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Puzzle"
                android:textColor="@color/colorGreen"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="15dp"
            android:background="@color/grey_20">

            <TextView
                android:id="@+id/thearticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:text="Ecoutez l'article" />

            <ImageButton
                android:id="@+id/tts_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_headset_black_24dp"
                android:background="@drawable/roundcorner"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:padding="25dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/article_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:autoLink="web"
            android:textColor="@android:color/black"
            android:fontFamily="serif"
            android:textSize="17sp"
            android:text="" />


        <!--            <include layout="@layout/summarize_view"></include>-->

        <!--            <TextView-->
        <!--                android:id="@+id/body2"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:autoLink="web"-->
        <!--                android:text="Livre Body"-->
        <!--                android:layout_marginTop="15dp"-->
        <!--                android:layout_marginBottom="5dp"-->
        <!--                android:textColor="@android:color/black"-->
        <!--                android:fontFamily="serif"-->
        <!--                android:textSize="17sp" />-->


        <Button
            android:id="@+id/button_read"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="LIRE TOUT ..."
            android:textColor="@color/colorGreen" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="30dp"
            android:text="Title" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>